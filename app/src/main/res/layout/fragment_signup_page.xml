<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Screens.SignupPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:src="@drawable/back_arrow"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/password_reset_logo"
                android:layout_marginBottom="40dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create new account..."
                android:layout_marginHorizontal="20dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_bold"/>


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_edittext_back"
                android:elevation="6dp"
                android:fontFamily="@font/roboto"
                android:singleLine="true"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:letterSpacing="0.1"
                android:paddingEnd="12dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textColorHint="#616161"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_edittext_back"
                android:elevation="6dp"
                android:fontFamily="@font/roboto"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:inputType="textPostalAddress"
                android:letterSpacing="0.1"
                android:paddingEnd="12dp"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#616161"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_edittext_back"
                android:drawableEnd="@drawable/phone"
                android:elevation="6dp"
                android:fontFamily="@font/roboto"
                android:hint="Mobile"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:letterSpacing="0.1"
                android:paddingEnd="12dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textColorHint="#616161"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
            <EditText
                android:visibility="gone"
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_edittext_back"
                android:elevation="6dp"
                android:fontFamily="@font/roboto"
                android:hint="Enter Otp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:letterSpacing="0.1"
                android:paddingEnd="12dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textColorHint="#616161"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send_otp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button_back"
                android:backgroundTint="@color/blue"
                android:elevation="6dp"
                android:visibility="visible"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:text="Send Otp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/verify_otp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button_back"
                android:backgroundTint="@color/blue"
                android:elevation="6dp"
                android:visibility="gone"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:text="Verify Otp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resend_otp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button_back"
                android:backgroundTint="@color/blue"
                android:elevation="6dp"
                android:visibility="gone"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:text="Resend Otp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Alert: Please save the OTP for all other future Logins!"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>