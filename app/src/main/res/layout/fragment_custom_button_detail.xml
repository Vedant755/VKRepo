                    android:textSize="16sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_200" />

            <EditText
                android:id="@+id/vehicle_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehicle address"
                android:padding="15dp"
                android:textColorHint="@color/gray_500" />

            <EditText
                android:id="@+id/carries_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Carries good"
                android:padding="15dp"
                android:textColorHint="@color/gray_500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_med"
                android:text="SEND SMS TO"
                android:textSize="17sp" />

            <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/mainn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">


                <TextView
                    android:id="@+id/key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/assitant"
                    android:text="Level1 (Excel)"
                    android:textColor="@color/dark_3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/level1_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:buttonTint="@color/dark_3" />


