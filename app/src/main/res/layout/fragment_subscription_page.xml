<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.SubscriptionPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/s4"
        android:backgroundTint="#FFFFFF"
        android:elevation="3dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/assitant"
            android:gravity="center"
            android:text="ACTIVE SUBSCRIPTION"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_med"
            android:layout_marginTop="20dp"
            android:text="From Date:"
            android:textColor="@color/gray_700"
            android:textSize="15.5dp" />

        <TextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            android:textSize="17.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F1F0F0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_med"
            android:textColor="@color/gray_700"
            android:text="Till Date:"
            android:textSize="15.5dp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            android:textSize="17.5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F1F0F0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_700"
            android:fontFamily="@font/poppins_med"
            android:text="Remaining Days:"
            android:textSize="15.5dp" />

        <TextView
            android:id="@+id/remaining_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            android:textSize="17.5dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:src="@drawable/sub"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</RelativeLayout>